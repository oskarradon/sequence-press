<h1 id="page-title">{{blog.title}}</h1>
{{ article.comment_post_url }}
{% paginate blog.articles by 5 %}
  {% for article in blog.articles  %}
			<div class="news-box">
				<h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
				<em>posted {{ article.created_at | date: "%Y %h %d" }}</em>
				{{ article.content | strip_html | truncatewords: 35 }}
				<br /><a href="{{ article.url }}">Read on...</a>
			</div>
  {% endfor %}
  <div id="pagination">
    {{ paginate | default_pagination }}
  </div>
{% endpaginate %}
